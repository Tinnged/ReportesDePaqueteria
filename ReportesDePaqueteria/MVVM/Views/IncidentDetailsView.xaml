<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.IncidentDetailsView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Detalles del Incidente"
             BackgroundColor="#F5F5F5">

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Header Card -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="⚠️ INC-2025-047" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#333"/>
                    <Label Text="Detalles completos del incidente" 
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Placeholder Content -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="20">
                <Label Text="Esta página mostrará todos los detalles del incidente seleccionado, incluyendo el historial de actualizaciones, comentarios, y estado de resolución."
                       TextColor="#666"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center"
                       Margin="0,50"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>